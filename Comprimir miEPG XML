name: Comprimir miEPG XML

on:
  workflow_dispatch:

jobs:
  compress:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout del repositorio (rama Felisuk)
        uses: actions/checkout@v3
        with:
          ref: Felisuk

      - name: Verificar existencia de miEPG.xml
        id: verificar_archivo
        run: |
          if [ ! -f miEPG.xml ]; then
            echo "ERROR: El archivo miEPG.xml no existe en la rama Felisuk"
            exit 1
          fi
          echo "Archivo miEPG.xml encontrado"

      - name: Obtener versión de miEPG.xml
        id: obtener_version
        run: |
          VERSION=$(grep -oP 'versión\s*=\s*"\K[0-9.]+' miEPG.xml | head -n1)
          VERSION=$(echo "$VERSION" | tr -d '\n' | sed 's/\.$//')

          if [ -z "$VERSION" ]; then
            echo "ERROR: No se pudo extraer la versión de miEPG.xml"
            exit 1
          fi

          echo "Versión encontrada: $VERSION"
          echo "VERSION=$VERSION" >> "$GITHUB_OUTPUT"

      - name: Comprimir miEPG.xml
        run: |
          rm -rf comprimido
          mkdir -p comprimido
          gzip -c miEPG.xml > "comprimido/miEPG-${{ steps.obtener_version.outputs.VERSION }}.xml.gz"
          echo "Archivo comprimido creado en ./comprimido/miEPG-${{ steps.obtener_version.outputs.VERSION }}.xml.gz"

      - name: Commit y push del archivo comprimido
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          git config --global user.name "felisuk"
          git config --global user.email "felisuk@users.noreply.github.com"
          git add comprimido/miEPG-${{ steps.obtener_version.outputs.VERSION }}.xml.gz
          git diff --cached --quiet || git commit -m "Añadido archivo comprimido miEPG-${{ steps.obtener_version.outputs.VERSION }}.xml.gz"
          git push
